<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/formulaPresentation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_layout_separator"
            android:orientation="vertical"
            android:paddingBottom="@dimen/layoutPadding">

            <TextView
                android:id="@+id/explanationIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_marginTop="@dimen/text_margin"
                android:text="@string/explanationIntro"
                android:textSize="@dimen/explanationFontSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/formulaWithValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_layout_separator"
            android:orientation="vertical"
            android:paddingBottom="@dimen/layoutPadding">

            <TextView
                android:id="@+id/formulaValuesIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_marginTop="@dimen/text_margin"
                android:text="@string/explanationValuesStep"
                android:textSize="@dimen/explanationFontSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/developmentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/linear_layout_separator"
            android:orientation="vertical"
            android:paddingBottom="@dimen/layoutPadding">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_marginTop="@dimen/text_margin"
                android:text="@string/developingFormula"
                android:textSize="@dimen/explanationFontSize" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>